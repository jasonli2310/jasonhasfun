<div class="container">
  <div class="row">
    <div class="col-sm-3">

      <div class="sidebar-nav">
        <div class="navbar navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <span class="visible-xs navbar-brand">Sidebar menu</span>
          </div>

          <div class="navbar-collapse collapse sidebar-navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><h4>Jason Has Fun</h4></li>


              <li>
                <a href="/photos">
                  <i class="fa fa-fw fa-file-photo-o"></i>
                  <span class="hidden-sm">
                    Photos
                  </span>
                </a>
              </li>

              <li>
                <a href="/writings">
                  <i class="fa fa-fw fa-file-text-o"></i>
                  <span class="hidden-sm">
                    Words
                  </span></a>
                </li>

                <li>
                  <a href="/inmails/new">
                    <i class="fa fa-fw fa-hand-peace-o"></i>
                    <span class="hidden-sm">
                      Contact
                    </span>
                  </a>
                </li>

                <li>
                  <a href="/writings">
                    <i class="fa fa-fw fa-angle-left"></i>
                    <span class="hidden-sm">
                      Back
                    </span>
                  </a>
                </li>
                <% if current_user.present? %>
                <li>
                  <a href="/users/edit">
                    <i class="fa fa-fw fa-edit"></i>
                    <%= current_user.username %>
                  </a>
                </li>
                <li>
                  <a href="/users/sign_out" data-method="delete" rel="nofollow">
                    <i class="fa fa-fw fa-sign-out"></i>
                    Sign Out
                  </a>
                </li>
                <% else %>
                <li>
                  <a href="/users/sign_in">
                    Sign In
                    </a>
                  </li>
                <li>
                  <a href="/users/sign_up">
                    Sign Up
                    </a>
                  </li>
                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>
      <div class="col-sm-9">

        <h4>
          Writing
          <% if current_user.present? %>
          <a href="/writings/new"><i class="fa fa-fw fa-plus"></i>
            <span class="hidden-sm"></span>
          </a>
          <% end %>
        </h4>

        <table class="table table-hover">

          <% @writings.each do |writing| %>
          <tr>
            <td><a href="/writings/<%= writing.id %>" ><%= writing.title %></a></td>
            <td><%= writing.created_at.strftime("%m.%d.%Y") %></td>

            <% if current_user.present? %>
            <td>
              <a href="/writings/<%= writing.id %>" >Show</a>
              <a href="/writings/<%= writing.id %>/edit" >Edit</a>
              <a href="/delete_writing/<%= writing.id %>" rel="nofollow">Delete</a>
            </td>
            <% end %>

          </tr>
          <% end %>
        </table>



      </div>
    </div>
  </div>
