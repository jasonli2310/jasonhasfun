<div class="container">
  <div class="row">
    <div class="col-sm-3">

      <div class="sidebar-nav">
        <div class="navbar navbar-default" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <span class="visible-xs navbar-brand">Sidebar menu</span>
          </div>

          <div class="navbar-collapse collapse sidebar-navbar-collapse">
            <ul class="nav navbar-nav">
              <li class="active"><h4>Jason Has Fun</h4></li>


              <li>
                <a href="/photos">
                  <i class="fa fa-fw fa-file-photo-o"></i>
                  <span class="hidden-sm">
                    Photos
                  </span>
                </a>
              </li>

              <li>
                <a href="/writings">
                  <i class="fa fa-fw fa-file-text-o"></i>
                  <span class="hidden-sm">
                    Words
                  </span></a>
                </li>

                <li>
                  <a href="/inmails/new">
                    <i class="fa fa-fw fa-hand-peace-o"></i>
                    <span class="hidden-sm">
                      Contact
                    </span>
                  </a>
                </li>

                <li>
                  <a href="/writings">
                    <i class="fa fa-fw fa-angle-left"></i>
                    <span class="hidden-sm">
                      Back
                    </span>
                  </a>
                </li>

                <% if current_user.present? %>
                <li>
                  <a href="/users/edit">
                    <i class="fa fa-fw fa-edit"></i>
                    <%= current_user.username %>
                  </a>
                </li>
                <li>
                  <a href="/users/sign_out" data-method="delete" rel="nofollow">
                    <i class="fa fa-fw fa-sign-out"></i>
                    Sign Out
                  </a>
                </li>
                <% else %>
                <li>
                  <a href="/users/sign_in">
                    Sign In
                  </a>
                </li>
                <li>
                  <a href="/users/sign_up">
                    Sign Up
                  </a>
                </li>
                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>



      <div class="col-sm-9">
        <h3>Photo #<%= @photo.id %></h3>


        <div class="row">
          <div class="col-md-12 mb-2">
            <dl class="dl-horizontal">
              <dt>Caption</dt>
              <dd><%= @photo.caption %></dd>

              <dt>Image</dt>
              <dd><%= @photo.image %></dd>

              <dt>User</dt>
              <dd><%= @photo.user_id %></dd>

            </dl>

            <div class="btn-group btn-group-justified">
              <a href="/photos" class="btn btn-primary">
                Back
              </a>
              <a href="/photos/<%= @photo.id %>/edit" class="btn btn-warning">
                Edit
              </a>
              <a href="/delete_photo/<%= @photo.id %>" class="btn btn-danger" rel="nofollow">
                Delete
              </a>
            </div>
          </div>
        </div>
      </div>
